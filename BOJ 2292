#include <stdio.h>

int main()
{
    int ary[20000] = {0,1,}, N, i;              //변수 선언.
    scanf("%d", &N);                            //N입력.
    if(N==1){                                   //N이 1일 때
        printf("%d", 1);                        //1 출력.
    }else{                                      //N이 1이 아닐 때
        for(i=1;;i++){                          //지나는 방의 개수가 바뀌는 지점을 배열에 저장하기 위한 반복문.
                i = (i==1) ? i+1 : i;           //i가 1일 때, i를 2로 바꿔준다.
                ary[i] = ary[i-1] + 6*(i-1);    //배열에 해당 값 저장.(수학)
                if(ary[i]+1>N){                 //원하는 값이 나오면,
                    printf("%d", i);            //결과값 (지나는 방 개수) 출력.
                    break;                      //반복문 종료.
                }
            }        
    }

    return 0;
}
